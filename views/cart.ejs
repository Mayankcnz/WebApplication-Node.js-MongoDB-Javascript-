<div class="modal fade" id="cart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cart</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="show-cart table">
          <% if (data.products !== null) { console.log("check1234"); console.log(data.products); console.log("check123"); %> 
          <% for (var i in data.products) { console.log(data.products[i].item.name) %>
            <tr>
              <td>
                  <%= "( "+ data.products[i].item.name +" ) "%>
                  <% console.log("is it working") %>
              </td>
              <td>
                <div class="input-group">
                  <button class="minus-item input-group-addon btn btn-primary" data-name='<%= data.products[i].item.name %>' >-</button>
                <input type="number" class="item-count form-control" data-name='<%= data.products[i].item.name %>' value='<%= data.products[i].qty %>' > 
                <button class="plus-item btn btn-primary input-group-addon" data-name='<%= data.products[i].item.name %>'>+</button> 
              
                </div>
              </td>
              <td>
                  <button class="delete-item btn btn-danger" data-name='<%= data.products[i].item.name %>' >

                  </button>
              </td>  
              =
              <td>
                <%= data.products[i].qty %>
              </td>
            </tr>

         <% }} %>
          
        </table>
        <div>Total price: $<span class="total-cart"></span></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Order now</button>
      </div>
    </div>
  </div>
</div> 





