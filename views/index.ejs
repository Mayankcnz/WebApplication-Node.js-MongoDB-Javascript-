 <!-- Slideshow container -->
 <div class="slideshow-container">
  <!-- Full-width images with number and caption text -->
  <% for(let i = 0; i < data.updatedProducts.length; i++) { %>
    <div class="text-center slide fade">
      <a href="/products/<%= data.updatedProducts[i]._id %>">
        <img src="<%= data.updatedProducts[i].image %>" class="img-fluid" style="width:50%">
        <div class="caption"><%= data.updatedProducts[i].name %></div>
      </a>
    </div>
  <% } %>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&lt;-</a>
  <a class="next" onclick="plusSlides(1)">-&gt;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
  <% for(let i = 0; i < data.updatedProducts.length; i++) { %>
    <span class="dot" onclick="currentSlide(<%= i+1 %>)"></span>
  <% } %>
</div>

<div class="row">
  <div class="col-sm-3">
    <%- include('partials/sidebar') %>
  </div>

  <div class="new-products text-center col-sm-9 padding-right">
    <h2>Newest Products</h2>
    <ul class="product-list">
      <% for(let i = 0; i < data.newProducts.length; i++) { %>
        <%- include('partials/cell', {product: data.newProducts[i]}) %>
      <% } %>
    </ul>
  </div>
</div>

<script>
  var slideIndex = 1;
  showSlides(slideIndex);

  // Next/previous controls
  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  // Thumbnail image controls
  function currentSlide(n) {
    showSlides(slideIndex = n);
  }

  function showSlides(n) {
    var i;
    var slides = document.getElementsByClassName("slide");
    var dots = document.getElementsByClassName("dot");
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    for (i = 0; i < slides.length; i++) {
        slides[i].className = slides[i].className.replace(" show", "");
        slides[i].style.display = "none";
    }
    for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
    }
    slides[slideIndex-1].style.display = "block";
    slides[slideIndex-1].className += " show";
    dots[slideIndex-1].className += " active";
  }
</script>